<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chess Game</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1604948501466-4e9c339b9c24?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8Y2hlc3MlMjBiYWNrZ3JvdW5kfGVufDB8fDB8fHww');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .chessboard {
            display: grid;
            grid-template-columns: repeat(8, minmax(0, 1fr));
            grid-template-rows: repeat(8, minmax(0, 1fr));
            width: 400px;
            height: 400px;
            transform: rotate(0deg);
        }

        .piece.white {
            color: white;
            filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
        }

        .piece.black {
            color: black;
        }

        .flipped {
            transform: rotate(180deg);
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .square.light {
            background-color: #f0e5d3;
        }

        .square.dark {
            background-color: #b58863;
        }

        .piece {
            font-size: 36px;
            cursor: pointer;
        }

        .piece.draggable {
            cursor: grab;
        }

        .dragging {
            opacity: 0.5;
        }

        /* Rotate pieces for black player */
        .flipped .piece {
            transform: rotate(180deg);
        }

        .btn-play {
            padding: 16px 32px;
            background-color: wheat;
            color: black;
            border-radius: 8px;
            font-size: 18px;
            text-transform: uppercase;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-play:hover {
            background-color: rgb(224, 180, 98);
        }

        .btn-play:focus {
            outline: none;
        }

        h1 {
            font-family: 'Arial', sans-serif;
            font-size: 36px;
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
        }

        .chess-title {
            font-size: 40px;
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Toast styling */
        .toast {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 16px;
            border-radius: 8px;
            font-size: 16px;
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.5s ease-in-out, visibility 0s 0.5s;
        }

        .toast.show {
            visibility: visible;
            opacity: 1;
            transition: opacity 0.5s ease-in-out;
        }
    </style>
</head>
<body>
    <!-- Landing Page with Play Button -->
    <div class="w-full h-screen flex flex-col items-center justify-center space-y-10 md:ml-32">
        <h1 class="text-5xl font-semibold text-white">Welcome to Chess</h1>
        <button class="btn-play">Play Game</button>
    </div>

    <!-- Chessboard Section -->
    <div class="w-full h-screen flex flex-col items-center justify-center bg-zinc-900 hidden" id="chessboard-container">
        <h1 class="chess-title">Chess Game</h1>
        <div class="chessboard w-96 h-96"></div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast">
        Game started! Good luck!
    </div>

    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
    integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
    crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
    integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/chessgame.js"></script>

    <script>
        // Handle Play button click to show chessboard
        const playButton = document.querySelector('.btn-play');
        const chessboardContainer = document.getElementById('chessboard-container');
        const toast = document.getElementById('toast');

        playButton.addEventListener('click', () => {
            // Hide the landing page and show the chessboard
            playButton.parentElement.classList.add('hidden');
            chessboardContainer.classList.remove('hidden');

            // Show the toast notification
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000); // Hide toast after 3 seconds
        });
    </script>
</body>
</html>